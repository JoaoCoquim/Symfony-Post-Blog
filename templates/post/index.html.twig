{% extends 'base.html.twig' %}

{% block title %}My Posts!{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <h1>List of all posts</h1>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <th>{{ post.id }}</th>
                <td>
                    <a href="{{ path('post.show', {id: post.id}) }}">{{ post.title }}</a>
                </td>
                <td>
                    <a href="{{ path('post.delete', {id: post.id}) }}" class="btn btn-outline-danger btn-sm">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('post.create') }}" class="btn btn-primary btn-sm" role="button">Create new post</a>

{% endblock %}
